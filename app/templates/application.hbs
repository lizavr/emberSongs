{{page-title "Rock & Roll with Octane"}}
<div class="bg-blue-900 text-gray-100 p-8 h-screen">
  <XToggle
    class="justify-end"
    @value={{this.language.isEn}}
    @onToggle={{this.toggleLanguage}}
    @showLabels={{true}}
    @onLabel="EN"
    @offLabel="RU"
    @theme="light"
    @size="small"
  />
  <div class="mx-auto mb-4">
    <div class="h-12 flex items-center mb-4 border-b-2">
      <LinkTo @route="bands">
        <h1 class="font-bold text-2xl">
          {{t "Rock&Roll"}}
          <span class="font-normal"> {{t "withOctane"}}</span>
        </h1>
      </LinkTo>
    </div>
    <div class="flex flex-wrap -mx-2">
      {{outlet}}
    </div>
  </div>
</div>